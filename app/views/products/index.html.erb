<html>
  <head>
    <title> Home</title>
  </head>
  <body>
    <div class='text-center'>
      <h4>Products</h4>
      <div class="row px-xl-5 pb-3">
        <div class='col'>
          <% if (!@products.blank?) %>
            <% for item in @products %>
              <section style="background-color: #eee;">
                <div class="container py-5">
                  <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-4">
                      <div class="card text-black">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                          <div class="carousel-inner">
                            <% item.images.each_with_index do |image, index| %>
                              <div class="item <%= index == 0 ? 'active' : '' %>">
                                <%= image_tag image, style: "width: 100px;"%>
                              </div>
                            <% end %>
                          </div>
                          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                          </a>
                          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                          </a>
                        </div>
                        <div class="card-body">
                          <div class="text-center">
                            <h5 class="card-title">
                            </h5>
                            <p class="text-muted mb-4"><b><%= item.product_name%></b></p>
                          </div>
                          <div>
                            <div class="d-flex justify-content-between">
                              <span>Quantity:</span><span><%= item.quantity%></span>
                            </div>
                            <div class="d-flex justify-content-between">
                              <span>Price:</span><span><%= item.price%>$</span>
                            </div>
                          </div>
                          <p class="text-muted mb-4"> <b>Description:</b> <br>
                            <%= item.descriptio%></p>
                          <div class="d-flex justify-content-between total font-weight-bold mt-4">
                            <%=  button_to "View details", product_path(item) ,method: :get%>
                            <%# <%=  button_to "Add to cart", product_path(item),method: :get%>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </section>
            <%end%>
          <%else%>
          <%end%>
        </div>
      </div>
    </div>
  </body>
</html>
